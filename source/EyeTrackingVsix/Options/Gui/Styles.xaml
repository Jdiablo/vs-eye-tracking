<ResourceDictionary xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="GroupBox">
        <Setter Property="Margin" Value="0 0 6 6" />
        <Setter Property="Padding" Value="4 6" />
    </Style>
    <Style TargetType="CheckBox">
        <Setter Property="Margin" Value="0 0 0 8"></Setter>
    </Style>
    <Style x:Key="ContainerWithBottomMargin" TargetType="Panel">
        <Setter Property="Margin" Value="0 0 0 12" />
    </Style>
    <Style x:Key="AlignWithSliderLeft" TargetType="TextBlock">
        <Setter Property="Margin" Value="6 0 0 0" />
        <Setter Property="TextAlignment" Value="Left" />
        <Setter Property="FontSize" Value="10" />
    </Style>
    <Style x:Key="AlignWithSliderRight" TargetType="TextBlock">
        <Setter Property="Margin" Value="0 0 6 0" />
        <Setter Property="TextAlignment" Value="Right" />
        <Setter Property="FontSize" Value="10" />
    </Style>
</ResourceDictionary>
